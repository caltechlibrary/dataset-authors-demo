{{- define "head.tmpl" -}}
<head>
    <title>Dataset Search Results</title>
<style>
/**
 * site.css - stylesheet for the Caltech Library's Digital Library Development Group's sandbox.
 *
 * orange: #FF6E1E;
 *
 * Secondary pallet:
 *
 * lightgrey: #C8C8C8
 * grey: #76777B
 * darkgrey: #616265
 * slategrey: #AAA99F
 *
 * Impact Pallete see: http://identity.caltech.edu/web/colors
 */
body {
     margin: 0;
     border: 0;
     padding: 0;
     width: 100%;
     height: 100%;
     color: black;
     background-color: white;
     font-family: Open Sans, Helvetica, Sans-Serif;
     font-size: calc(1em+1vm);
}

.page-header {
     position: relative;
     display: block;
     color: white;
     background-color: white;
     z-index: 2;
     width: 100%;
     height: 4em;
     vertical-align: middle;
}

.page-header img {
     position: relative;
     display: inline;
     padding-left: 20px;
     margin: 0;
     height: 42px;
     padding-top: 32px;
}

.page-header h1 {
     position: relative;
     display: inline-block;
     margin-top: 0;
     margin-bottom: 0;
     margin-left: 0.24em;
     margin-right: 0;
     border: 0;
     padding: 0;
     font-size: 3em;
     font-weight: normal;
     vertical-align: 0.78em;
     color: #FF6E1E;
}

.page-header a, .page-header a:link, .page-header a:visited, .page-header a:active, .page-header a:hover, .page-header a:focus {
     color: #FF6E1E;
     background-color: inherit;
}


a, a:link, a:visited {
     color: #76777B;
     background-color: inherit;
     text-decoration: none;
}

a:active, a:hover, a:focus {
    color: #FF6E1E;
    font-weight: bolder;
}

.page-nav {
     position: relative;
     display: block;
     width: 100%;
     margin: 0;
     padding: 0;
     font-size: 0.78em;
     vertical-align: middle;
     color: black;
     background-color: #AAA99F; /* #76777B;*/
     text-align: left;
}

.page-nav div {
     display: inline-block;
     /* padding-left: 10em; */
     margin-left: 10em;
     margin-right: 0;
}

.page-nav a, .page-nav a:link, .page-nav a:visited, .page-nav a:active {
     color: white;
     background-color: inherit;
     text-decoration: none;
}

.page-nav a:hover, .page-nav a:focus {
     color: #FF6E1E;
     background-color: inherit;
     text-decoration: none;
}

.page-nav div h2 {
     position: relative;
     display: block;
     min-width: 20%;
     margin: 0;
     font-size: 1.24em;
     font-style: normal;
}

.page-nav div > ul {
     display: none;
     padding-left: 0.24em;
     text-align: left;
}

.page-nav ul {
     display: inline-block;
     padding-left: 0.24em;
     list-style-type: none;
     text-align: left;
     text-decoration: none; 
}

.page-nav ul li {
     display: inline;
     padding: 1em;
}

.page-content {
     position: relative;
     display: inline-block;
     width: 100%;
     height: 100%;
     color: black;
     background-color: white;
     margin: 0;
     padding-top 0;
     padding-bottom: 2em;
     padding-left: 1em;
     padding-right: 0;
}

.page-content h1 {
    font-size: 1.32em;
}

.page-content h2 {
    font-size: 1.12em;
    font-weight: italic;
}

.page-content h3 {
    font-size: 1em;
    text-transform: uppercase;
}

.page-content p {
    max-width: 98%;
}

.page-content ul {
    display: block;
    list-style: inside;
    list-style-type: circle;
    margin: 0;
    padding-left: 1.24em;
}

.page-content ul ul {
    list-style-type: disc;
}

.page-content ul ul ul {
    list-style-type: square;
}

.page-content ul ul ul ul {
    list-style-type: circle;
}

.page-content ul ul ul ul ul {
    list-style-type: disc;
}

.page-content ul ul ul ul ul ul {
    list-style-type: square;
}

.page-aside {
     margin: 0;
     border: 0;
     padding-left: 1em;
     position: relative;
     display: inline-block;
     text-align: right;
}

.page-aside h2 {
     font-size: 1em;
     text-transform: uppercase;
}

.page-aside h2 > a {
     font-style: normal;
}

.page-aside ul {
     margin: 0;
     padding: 0;
     display: block;
     list-style-type: none;
}

.page-aside ul li {
     font-size: 0.82em;
}

.page-aside ul > ul {
     padding-left: 1em;
     font-size: 0.72em;
}

.page-footer {
     position: fixed;
     bottom: 0;
     display: block;
     width: 100%;
     height: auto;
     color: white;
     background-color: #616265;

     font-size: 80%;
     text-align: left;
     vertical-align: middle;
     z-index: 2;
}

.page-footer div {
    margin-left: 0.25em;
}

.page-footer h1, .page-footer span, .page-footer address {
     position: relative;
     display: inline-block;

     margin: 0;
     padding-left: 0.24em;
     font-family: Open Sans, Helvetica, Sans-Serif;
     font-size: 1em;
}

.page-footer h1 {
     font-weight: normal;
}

.page-footer a, .page-footer a:link, .page-footer a:visited, .page-footer a:active, .page-footer a:focus, .page-footer a:hover {
     padding: 0;
     display: inline;
     margin: 0;
     color: #FF6E1E;
     text-decoration: none;
}

.search-box {
    display: block;
}

.search-box div {
    display: block;
}

.search-go-button {
    display: block;
}

.search-go-button input {
    text-align: center;
    margin: 0.24em;
}

.search-result-pager {
    padding-top: 1.24em;
    padding-bottom: 1.24em;
}

.search-results {
    margin-top:0;
    margin-bottom:0;
    margin-left: 0;
    margin-right: 1.24em;
    padding: 0;
}
.search-result {
    padding-top: 0.24em;
    padding-bottom: 1.24em;
    border-top: 1px solid black;
}

.search-result:nth-child(even) {
    background-color: gainsboro;
}

.field-name, .matched-name, .index-name {
    text-transform: lowercase;
    text-align: right;
    font-size: 40%;
}

.field-value {
    max-width: 40%;
}

.index-name {
    text-transform: lowercase;
}

.index-value {
    font-size: smaller;
    font-size: 40%;
    font-style: italic;
}

.authors li {
    list-style: none;
}
</style>
</head>
{{- end -}}
